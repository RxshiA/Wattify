<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dvBackground1">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Profile"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/profile_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="32dp"
        android:text="Name:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_label"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/login_edittext"
        android:padding="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="32dp"
        android:text="Email:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_email_label"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/login_edittext"
        android:padding="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_email"
        android:text="Password:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/profile_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_password_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:background="@drawable/login_edittext"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/profile_password_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:padding="16dp"
        android:src="@drawable/ic_password_hidden" />

    <Button
        android:id="@+id/profile_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Logout"
        android:textSize="18sp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_logout_button"
        android:text="Edit"
        android:layout_marginTop="32dp"/>


</RelativeLayout>
